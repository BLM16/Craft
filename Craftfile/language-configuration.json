{
    "comments": {
        "lineComment": "#",
    },
    "brackets": [
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "offSide": true,
        "markers": {
            "start": "^([^\\s:]+):",
            "end": "^([^\\s:]+):"
        }
    },
    "onEnterRules": [{
        "beforeText": "^([^\\s:]+):",
        "action": { "indent": "indent" }
    }]
}
